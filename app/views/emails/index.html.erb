<h1>Welcome to my Web App</h1>
<h2>Please join the mailing list!</h2>
<br />

<% @emails.each do |email| %>
<div>
	<h3><%= email.name %></h3>
	<i><%= email.email %></i>
</div>
<% end %>
<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Name and Email</h1>
  <%= simple_form_for @email do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <br />
    <%= f.submit 'Join the List' %>
  <% end %>
</div>

